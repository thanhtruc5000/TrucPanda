<link rel="stylesheet" href="./assets/stylesheets/_inventory.css">

<% if product.inventory_count <= 0 %>
  <p>Hết hàng</p>
  <p>Email me when available.</p>

  <%= form_with model: [product, Subscriber.new] do |form| %>
    <%= form.email_field :email, placeholder: "you@example.com", required: true %>
    <%= form.submit "Gửi" %>
  <% end %>
<% else %>
  <p><%= product.inventory_count %> sản phẩm còn hàng</p>
<% end %>
